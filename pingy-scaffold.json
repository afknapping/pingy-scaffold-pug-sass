{
	"name": "Tigerstone 2",
	"description": "Opinionated Pingy scaffold for fast prototyping using Pug, indented Sass and atomic single-file components.",

	"dependencies": {
		"pug-bootstrap": "0.0.15"
	},

	"devDependencies": {
		"pug": "2.0.0-rc.4",
    	"node-sass": "^4.5.3",
	    "jstransformer-sass": "1.0.0",
	    "jstransformer-markdown-it":"2.0.0"
	},

	"scripts": {
		"start": "pingy dev",
		"deploy": "pingy build && surge"
	},

	"files": [
	  {
	    "input": "index.pug",
	    "output": "index.pug"
	  },
	  {
	    "input": "components/button.pug",
	    "output": "components/button.pug"
	  },
	  {
	    "input": "components/hero.pug",
	    "output": "components/hero.pug"
	  },
	  {
	    "input": "components/headline.pug",
	    "output": "components/headline.pug"
	  },
	  {

	    "input": "components/_nuclides.sass",
	    "output": "components/_nuclides.sass"
	  },
	  {
	    "input": "components/_component-list.pug",
	    "output": "components/_component-list.pug"
	  }
	]

}
